<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Convertidor" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:layout_y="36dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#ff2513cc"
        android:id="@+id/lblTitle" />

    <EditText
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:id="@+id/dataConverter"
        android:layout_x="15dp"
        android:layout_y="157dp"
        android:inputType="numberDecimal"
        android:hint="Grados a Convertir" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado:"
        android:id="@+id/lblResult"
        android:layout_x="26dp"
        android:layout_y="300dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#ff2513cc" />

    <RadioGroup android:id="@+id/group"
        android:orientation="horizontal"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_x="107dp"
        android:layout_y="229dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Celsius"
            android:id="@+id/rdoCent"
            android:layout_x="90dp"
            android:layout_y="229dp"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fahrenheit"
            android:id="@+id/rdoFaren"
            android:layout_x="190dp"
            android:layout_y="229dp"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Converter a"
        android:id="@+id/lblCa"
        android:layout_x="13dp"
        android:layout_y="235dp" />


</AbsoluteLayout>
